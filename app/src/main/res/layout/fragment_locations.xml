<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationsFragment"
    android:id="@+id/layoutLocations"
    android:orientation="vertical">

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="@string/Locations"-->
<!--        android:gravity="center"-->
<!--        android:textColor="@color/black"/>-->

    <TextView
        android:id="@+id/locationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="82dp"
        android:text="@string/locationsTitle"
        android:textColor="@color/forTitle"
        android:textSize="24sp">

    </TextView>


    <ListView
        android:id="@+id/locationsList"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/locationsTitle"
        android:layout_centerInParent="true"
        android:background="@color/gray"
        android:visibility="gone"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/locationsTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="120dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/startProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/colorButton"
        android:text="@string/startInventarization" />


</RelativeLayout>